///////////////////////////////////////////////////////////////////////////////
/// Status
///////////////////////////////////////////////////////////////////////////////

/* ------------------------------------------------------------------------- */

inline cc::state::state() : byte(0) {}

/* ------------------------------------------------------------------------- */

inline bool cc::state::get(const enum status s) const { 
  return byte & (1 << s); 
}

/* ------------------------------------------------------------------------- */

inline void cc::state::set_true(const enum status s) {
  byte |= (1 << s);
}

/* ------------------------------------------------------------------------- */

inline void cc::state::set_false(const enum status s) {
  byte &= ~(1 << s);
}

/* ------------------------------------------------------------------------- */

inline void cc::state::reset() {
  byte = 0;
}

